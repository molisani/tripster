<title>{{#if page_title}}{{page_title}}{{else}}Tripster{{/if}}</title>
<nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
        <a class="navbar-brand" href="./index.html">Tripster</a>
        <div class="pull-right">
            <ul class="nav navbar-nav">
                <li>
                    {{#if username}}
                        <a>Logged in as <b>{{username}}</b></a>
                    {{else}}
                        <a href="./login.html">Login</a>
                    {{/if}}
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    {{#if standalone}}{{{standalone}}}{{else}}
    <div class="row">
        <div class="col-md-{{#if page_sidebar}}9{{else}}12{{/if}}">
            {{#if page_header}}
            <div class="page-header">
                <h1>{{page_header}}</h1>
            </div>
            {{/if}}
            <div class="panel panel-default">
                <div class="panel-body">
                    {{{page_body}}}
                </div>
            </div>
        </div>
        {{#if page_sidebar}}
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{{page_sidebar}}}
                </div>
            </div>
        </div>
        {{/if}}
    </div>
    {{/if}}
</div>
<footer class="footer" style="position: absolute; bottom: 0; width: 100%; height: 60px; background-color: #f5f5f5;">
    <div class="container text-center">
        <p style="margin: 20px 0;">Things like copyrights, attributions, licenses, etc. go here ~ (C) 2014</p>
    </div>
</footer>